<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.AddSongPage"
             Title="AddSongPage">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry x:Name="SongNameEntry" Placeholder="Song name"/>
        <Entry x:Name="PerformerEntry" Placeholder="Performer"/>
        <Entry x:Name="ImageEntry" Placeholder="Image path"/>

        <Button Text="Add song"
                BackgroundColor="RoyalBlue"
                TextColor="White"
                Clicked="AddSongClicked"/>
    </VerticalStackLayout>
</ContentPage>