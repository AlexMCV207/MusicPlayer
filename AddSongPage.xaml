<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.AddSongPage"
             Title="AddSongPage"
             Background="CornflowerBlue">
    <VerticalStackLayout Padding="20" Spacing="15">
    
        <Entry x:Name="SongNameEntry" Placeholder="Nazwa" PlaceholderColor="White" Background="RoyalBlue"/>
        <Entry x:Name="PerformerEntry" Placeholder="Wykonawca" PlaceholderColor="White" Background="RoyalBlue"/>
        <Button Text="Wybierz obraz" BackgroundColor="RoyalBlue" TextColor="White" Clicked="PickImageClicked"/>
        <Image x:Name="SelectedImagePreview" HeightRequest="120" WidthRequest="120" Aspect="AspectFill" IsVisible="False"/>
        <Label x:Name="SelectedImageLabel" Text="Nie wybrano obrazu" TextColor="White"/>
        <Button Text="Wybierz plik audio" BackgroundColor="RoyalBlue" TextColor="White" Clicked="PickFileClicked"/>
        <Label x:Name="SelectedFileLabel" Text="Nie wybrano pliku" TextColor="White"/>
        <Button Text="Dodaj"
                BackgroundColor="RoyalBlue"
                TextColor="White"
                Clicked="AddSongClicked"/>
    </VerticalStackLayout>
</ContentPage>