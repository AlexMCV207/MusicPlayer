<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.AddPlaylistPage"
             Title="AddPlaylistPage"
             Background="CornflowerBlue">
    <VerticalStackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Nazwa playlisty" PlaceholderColor="White" Background="RoyalBlue"/>
        <Entry x:Name="AuthorEntry" Placeholder="Autor" PlaceholderColor="White" Background="RoyalBlue"/>
        <Entry x:Name="AmountEntry" Placeholder="Ilość utworów" Keyboard="Numeric" PlaceholderColor="White" Background="RoyalBlue"/>
        <Entry x:Name="LengthEntry" Placeholder="Długość (w sekundach)" PlaceholderColor="White" Background="RoyalBlue"/>
        <Entry x:Name="ImageEntry" Placeholder="Ścieżka do obrazu" PlaceholderColor="White" Background="RoyalBlue"/>

        <Button Text="Dodaj" Clicked="AddClicked" Background="RoyalBlue" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>